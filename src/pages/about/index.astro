            </div>

			<div class="card-wrapper">
				<Card
				title="CHANGELOG"
				icon="fa-pencil">
					<div class="scrollbox scrollbox-s scrollbox-light">
						<div class="scrollbox-list">
							{changelog.map((change) => {
								return <li>
									<a href={`https://github.com/rudytues-day/archive/commit/${change.id}`} aria-label="external">
