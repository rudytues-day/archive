</Layout>

<style>


    .sitemap li:has(> ul)::marker {
        content: '';
    }
    
	.card-masonry {
		margin: 3em auto;
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		align-items: center;
		gap: 1.5em;
		height: 100%;
	}

@media all and (min-width: 700px) {

	.card-masonry {
		display: flex;
		justify-content: center;
		max-width: 800px;
	}

	.card-masonry > * {
		margin: 1em;
	}

}

@media all and (min-width: 1000px) {}

