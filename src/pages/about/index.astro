<style>

.card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		align-items: center;
		gap: 2rem;
		padding: 0;
		margin: 2rem;
	}

    .card-sm {
        max-width: 350px;
        margin: auto;
    }
    
    .card-sm p {
        margin: 1em;
        /* text-wrap: */
    }

    .sitemap li:has(> ul)::marker {
        content: '';
    }

	section p {
		margin: 3em 0;
		text-align: center;
	}

	section:last-child {
		margin-bottom: 2.75em;
	}

	section p {
		margin: 1em;
		max-width: 800px;
	}


	section:last-child {
		margin-bottom: 0.25em;
	}

	section:last-child::after {
		margin-bottom: 0em;
	}

	section p {
		margin: 1em;
		max-width: 800px;
	}

	.gallery-grid {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: 1em;
		align-items: center;
		justify-content: center;
		margin: 3em auto;
		max-width: 600px;
	}

	.card-wrapper {
		margin: 3em auto;
		max-width: 750px;
	}

	.card-masonry {
		margin: 3em auto;
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		align-items: center;
		gap: 1.5em;
		height: 100%;
	}

	.grid-masonry {
		margin: 3em auto;
		display: flex;
		flex-direction: column;
		gap: 1.5em;
	}

	.thumb {
		max-width: 100px;
		max-height: 100px;
		border-radius: 0.5em;
	}

	.visit {
		margin: auto;
		font-size: 2rem;
		color: var(--primary-clr-dark);
		text-align: center;
		font-family: var(--display);
		text-decoration: none;
		transition: ease 0.2s;
	}

	.visit .fas {
		font-size: 0.8em;
	}

	.visit:hover {
		color: var(--primary-accent-clr)
	}

	b {
		font-family: var(--display);
		font-size: 1.125rem;
    }

@media all and (min-width: 700px) {

	section {
		margin: 1em auto;
	}

	section p {
		margin-block: 1em;
	}

	.card-p {
		margin: 1em;
	}

	.card-masonry {
		display: flex;
		justify-content: center;
		max-width: 800px;
	}

	.card-masonry > * {
		margin: 1em;
	}
	
	.grid-masonry {
		display: grid;
		grid-template-columns: 1fr 1fr;
		max-width: 800px;
	}

}

