                        <li><a href="/404">not_found.</a></li>
                    </ul>
                        </Card>
                
                <Card
                title="BUILD TOOLS"
                icon="fa-code">
                    <ul>
                        <li><b>LANGUAGES</b></li>
                            <ul>
                                <li>astro</li>
                                <li>typescript</li>
                                <li>javascript</li>
                                <li>css</li>
                                <li>markdown</li>
                            </ul>
                        </li>
                    </ul>
                    <ul>
                        <li><b>DEPENDENCIES</b></li>
                            <ul>
                                <li>set.prototype.intersection</li>
                            </ul>
                        </ul>
                    </ul>
                    <ul>
                        <li><b>FONTS</b></li>
                            <ul>
                                <li>darumadrop</li>
                                <li>averia libre</li>
                                <li>font awesome</li>
                            </ul>
                        </li>
                    </ul>
                </Card>
				
            </div>

			<div class="card-wrapper">
				<Card
				title="CHANGELOG"
				icon="fa-pencil">
					<div class="scrollbox scrollbox-s scrollbox-light">
						<div class="scrollbox-list">
							{changelog.map((change) => {
								return <li>
									<a href={`https://github.com/rudytues-day/archive/commit/${change.id}`} aria-label="external">
										<b>{change.date} :</b> {change.message}<em>{change.details && "â€” " + `${change.details}` + " "}</em>({change.id.slice(0,6)})
									</a>
								</li>
							})}
						</div>
					</div>
				</Card>
            </div>
            <div class="card-wrapper">
                <Card
                title="CREDITS"
                icon="fa-ribbon">
                    <p style="text-center">thank you to the fandom coders for supporting me on this journey</p>
                </Card>
			</div>

        <div class="card-wrapper card-s" style="width:40ch">

        </div>



		</section>

	</main>

</Layout>

