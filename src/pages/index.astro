---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Card from '../components/cards/Card.astro';
import Newsletters from '../components/cards/Newsletters.astro'

const newsletter = await getCollection("newsletter");

---

<Layout title="RUDY TUESDAY">

	<Navbar />

	<main>
		<header>
			<h1>LOOK UPON MY WORKS, YE MIGHTY, AND DESPAIR</h1>
			<p>... nothing beside remains</p>
		</header>

		<section>

			<Card 
				title="NEWS"
				icon="fa-newspaper">
				{ newsletter.map(async (letter) => {
					const renderedLetter = await letter.render();
					return (
					<Newsletters
						slug={letter.slug}
						title={letter.data.title}
						date={letter.data.date} 
					>
						<renderedLetter.Content />
					</Newsletters>
				
				)
					}
				)}
			</Card>

			<Card 
				title="SUBSCRIBE"
				icon="fa-paper-plane">
				<p>enter your email below to subscribe to my newsletter where i send out project and site updates, commission opening notifications, a round up of new entries to my art log and other goodies every so often.</p>
			</Card>

		</section>

		<section>

			<h2>LINKS</h2>

			<div class="card-masonry">
				<Card
					title="ONLINE"
					icon="fa-globe">
						<ul class="card-list">
							<li><b>MASTODON:</b> <a href=""></a></li>
							<li><b>BLUESKY:</b> <a href=""></a></li>
							<li><b>TWITTER:</b> <a href=""></a></li>
							<li><b>RETROSPRING:</b> @<a href="https://retrospring.net/@rudytuesday">rudytuesday</a></li>
							<li><b>AO3:</b> <a href=""></a></li>
							<li><b>DREAMWIDTH:</b> <a href=""></a></li>
							<li><b>COHOST:</b> <a href=""></a></li>
							<li><b>KO-FI:</b> <a href=""></a></li>
							<li><b>THRONE:</b> <a href=""></a></li>
							<li><b>ITCH.IO</b> <a href=""></a></li>
							<li><b>ARTISTREE:</b> <a href=""></a></li>
							<li><b>BOOSTY:</b> <a href=""></a></li>
						</ul>
				</Card>
				<Card
					title="MY SITES"
					icon="fa-code">
						<ul class="card-list">
							<li><a href="">rudytues.day</a></li>
							<li><a href="">ux.rudytues.day</a></li>
							<li><a href="">works.rudytues.day</a></li>
							<li><a href="">toybox.rudytues.day</a></li>
							<li><a href="">toybox.rudytues.day/dollby</a></li>
							<li><a href="">dollfreaks.neocities.com</a></li>
							<li><a href=""></a></li>
						</ul>
				</Card>
			</div>

		</section>

		<section>

			<h2>OTHER</h2>

			<Card
				title="NICETIES"
				icon="fa-gift"></Card>

			<Card
				title="AFFILIATES"
				icon="fa-heart"></Card>

		</section>

	</main>

</Layout>

<style>

	header {
		text-align: center;
		margin-bottom: 4em;
	}

	.card-list {
		margin: 1em;
		padding: 0;
	}

	.card-list li {
		padding-left: 1em;
	}
	.card-list li::marker {
		content: '/';
	}

	section p {
		margin: 3em 0;
		text-align: center;
	}

	section:last-child {
		margin-bottom: 2.75em;
	}

	section p {
		margin: 1em;
		max-width: 800px;
	}


	section:last-child {
		margin-bottom: 0.25em;
	}

	section:last-child::after {
		margin-bottom: 0em;
	}

	section p {
		margin: 1em;
		max-width: 800px;
	}

	.gallery-grid {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: 1em;
		align-items: center;
		justify-content: center;
		margin: 3em auto;
		max-width: 600px;
	}

	.card-wrapper {
		margin: 3em auto;
		max-width: 750px;
	}

	.card-masonry {
		margin: 3em auto;
		display: flex;
		flex-flow: row wrap;
		justify-content: center;
		align-items: center;
		gap: 1.5em;
		height: 100%;
	}

	.grid-masonry {
		margin: 3em auto;
		display: flex;
		flex-direction: column;
		gap: 1.5em;
	}

	.thumb {
		max-width: 100px;
		max-height: 100px;
		border-radius: 0.5em;
	}

	.visit {
		margin: auto;
		font-size: 2rem;
		color: var(--primary-clr-dark);
		text-align: center;
		font-family: var(--display);
		text-decoration: none;
		transition: ease 0.2s;
	}

	.visit .fas {
		font-size: 0.8em;
	}

	.visit:hover {
		color: var(--primary-accent-clr)
	}

	b {
		font-family: var(--display);
		font-size: 1.125rem;
    }

@media all and (min-width: 700px) {

	section {
		margin: 3em auto;
	}

	section p {
		margin: auto;
	}

	.card-masonry {
		display: flex;
		justify-content: center;
		max-width: 800px;
	}

	.card-masonry > * {
		margin: 1em;
	}
	
	.grid-masonry {
		display: grid;
		grid-template-columns: 1fr 1fr;
		max-width: 800px;
	}

}

@media all and (min-width: 1000px) {}

@media all and (min-width: 1200px) {}

</style>
