---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Filters from '../components/Filters.astro';
import RecentUploads from '../components/RecentUploads.astro';

import '../utility/reset.css'
---

<Layout>
		<Header />
		<main>
			<h1>GALLERY</h1>
			<slot />
		</main>
		<Filters />
		<RecentUploads />
</Layout>

<style>

	main {
		margin: auto;
		width: 100%;
		position: relative;
	}

	main::before,
	main::after {
		content: '';
		background-image: url('/imgs/chain_1_horizontal.png');
		display: block;
		width: 100%;
		height: 20px;
	}

	main::before {
		top: 0;
		margin-block: 0.25em 3em;
	}

	main::after {
		position: absolute;
		bottom: 0;
		margin-block: 3em 0.25em;
	}

	footer {
		text-align: center;
        background-color: var(--primary-clr-dark);
        color: var(--white-clr);
        padding: 1em;
		text-wrap: balance;
    }

</style>
