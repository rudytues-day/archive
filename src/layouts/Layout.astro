---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '../utility/reset.css'
import Header from '../components/Navbar.astro'
import Footer from '../components/Footer.astro';
import MetaTags from '../components/MetaTags.astro';
import ToTop from '../components/ToTop.astro';

---

<!doctype html>
<html lang="en">
	<head>

	<MetaTags />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title}</title>
	
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Averia+Libre:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Darumadrop+One&display=swap" rel="stylesheet">
	
		<link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css">
	
	</head>
	
	<body>
		<Header />
			<slot />
		<Footer />
		<ToTop />
	</body>

</html>

<style is:global>

	h1, h2, h3, h4 {
		font-family: var(--display);
		text-align: center;
	}
	h1 {
		font-size: 2rem;
		margin-block: 1.5em 1em;
		
	}
	h2 {
		font-size: 2rem;
		margin: 1.5em 0em;
	}
	h3 {
		font-size: 1.325rem;
		margin: 1.25em auto 1em auto;

	}

	h4 {
		font-size: 1.325rem;
		font-family: var(--display);
		margin: 1.25em auto 1em auto;
		text-align: center;
	}

		b,
		article b {
			font-family: var(--display);
			font-size: 1.125rem;
			font-weight: normal;
		}
		article ul {
			
		}

		article h1 {
			font-size: 1.5em;
			margin: 1.25em 1em 1em 1em;
			text-align: center;
			color: coral
		}

		article h1:first-of-type {
			text-align: left;
			margin-block: 1em 1em;
			font-size: 1.5em;
		}

		article h1::before {
			content: '\f084';
			font-family: 'Font Awesome 6 Pro';
			font-weight: bold;
			font-size: 1.25rem;
			margin-right: 0.5rem;
			color: orange;
		}

		.card-list a {
			font-weight: bold;
			color: var(--primary-link-clr);
			text-decoration: underline;
		}

		a:hover {
			color: var(--primary-accent-clr);
		}

		.external::after {
			display: inline-block;
			content: "\f08e";
			font-family: "Font Awesome 6 Pro";
			font-size: 0.8em;
			padding-left: 0.3em;
			font-weight: 900;
		}

		em {
			color: var(--primary-clr-light);
			padding-left: 0.3em;
			
		}

	

	main {
		margin: auto;
		width: 100%;
		position: relative;

	}

	main::before,
	main::after {
		content: '';
		background-image: url('/imgs/chain_1_horizontal.png');
		display: block;
		width: 100%;
		height: 20px;

	}

	main::before {
		top: 0;
		margin-block: 0.25em 5em;
	}

	main::after {
		bottom: 0;
		margin-block: 5em 0.25em;
	}

	section:not(:last-of-type)::after {
		content: '';
		background-image: url('/imgs/chain_1_horizontal.png');
		display: block;
		width: 100%;
		height: 20px;
		margin-block: 5em;
	}

	.card-list,
	.card-list ul {
		margin: 1em;
		padding: 0;
		list-style: none;
	}

	.card-list li {
		padding-left: 0.5em;
	}
    
	.card-list li::marker {
		content: '/';
	}

	.card-list b + a {
		padding-left: 0.25em;
	}

	.card-list ul {
		margin-block: 0;
	}

	.fa-ban {
		color: var(--primary-accent-clr);
	}
	
	.fa-feather {
		color: var(--primary-clr-200);
	}

	@media all and (min-width: 720px) {

		
	}

	@media all and (min-width: 1000px) {}
	

</style>
