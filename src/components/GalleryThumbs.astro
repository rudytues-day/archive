---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { formatDate } from '../utility/scripts/format-fxn.js';

import '../utility/styles/gallery-styles.css';

interface Props {
	title: string;
	thumb: ImageMetadata;
	date: Date;
	Nsfw?: boolean;
	Dd?: boolean;
	desc: string;
	original: boolean;
	medium: string;
    image: ImageMetadata;
    src: string;
}

const { 
    src,
    title,
    thumb,
    date,
    Nsfw,
    Dd,
    desc,
    medium,
    image
    } = Astro.props as Props; 
---

<div class="image">
    <figure>
        <button class="thumbnail" aria-label={`${title} thumbnail`}>
            <Image class="card-thumbnail"
                src={thumb}
                alt={`${title} thumbnail`}
            />
            <div class="ratings">
                {Nsfw && <i class="fa-solid fa-ban" aria-label="adult content"></i>}
                {Dd && <i class="fa-solid fa-feather" aria-label="sensitive content"></i>}
            </div>
        </button>
        <a href={src} target="_blank">
            <Image 
                class="full-size"
                src={image}
                alt=""
            />
        </a>
        <figcaption>
            <p class="title">{title}</p>
            <p>{desc}</p>
            <p><b>{medium}<br/>{formatDate(date)}</b></p>
        </figcaption>
    </figure>
</div>