---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { formatDate } from "../utility/utils.js";

interface Props {
	slug: string;
	title: string;
	thumb: ImageMetadata;
	date: Date;
	Nsfw?: boolean;
	Dd?: boolean;
	desc: string;
}

const { 
		slug,
		title,
		thumb,
		date,
		Nsfw,
		Dd,
		desc,
		} = Astro.props as Props;

---

	<a class="card" href={`/archive/entries/${slug}/`}>
		<h1>{title}</h1>
		<div class="body">
			<Image class="thumb"
				src={thumb}
				alt={`${title} thumbnail`}
			/>
			<div class="description">
				<div class="flex">
					<p class="date">{formatDate(date)}</p>
					<div class="icons">
						{ Nsfw && <i class="fas fa-ban" role="img" aria-label="adult content"></i> }
						{ Dd && <i class="fas fa-feather" role="img" aria-label="dead dove"></i>}
					</div>
				</div>
				<p class="text">{desc}</p>
			</div>
		</div>
	</a>

<style>

	h1 {
		margin: 0;
		font-size: 1.5em;
		background-color: var(--primary-clr-dark);
		overflow: hidden;
		padding: 0.5em;
		color: var(--white-clr);
		font-family: var(--display);
		/* border-radius: 0.75em 0.75em 0em 0em; */
		text-align: center;
		transition: ease 0.2s;
		max-height: 100%;
	}

	.card {
		text-decoration: none;
		color: #000;
		border: solid 2px var(--primary-clr-dark);		
		border-radius: 0.75em;
		/* border-radius: 0.75em; */
		background: var(--white-clr);
		overflow:hidden;
	}

	.card:hover h1 {
		color: var(--primary-accent-clr)
	}
	
	.body {
		padding: 1em;
	}
	
	.thumb {
		height: 150px;
		width: 150px;
		margin: 0.5em auto 0em auto;
		
	}

	.description {
		margin: 1em;
		display: grid;
		gap: 0.5em;
	}
	
	.text {
		margin: 0em;
		font-size: 0.95em;
        max-width: 20ch;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;  
		overflow: hidden;
	}

	.date {
		font-family: var(--display);
		text-transform: uppercase;
		font-size: 1.25em;
        margin: 0;
	}

	.flex {
        display: flex;
        gap: 0.5em;
        align-items: center;
		justify-content: center;
		text-align: center;
	}

	.icons {
		display: flex;
		gap: 0.25em;
        padding-top: 0.325em;
	}


</style>
