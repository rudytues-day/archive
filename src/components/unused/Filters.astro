const ratedBaby = document.getElementById("ratedBaby")
---

<div class="filter-wrapper">
    <fieldset id="rating">
        <legend>RATING</legend>
        <div class="form-flex">
			<button id="ratedBaby"><i class="fas fa-baby" role="img" aria-label="baby mode"></i></label>
			<button id="ratedNsfw"><i class="fas fa-ban" role="img" aria-label="adult content"></i></label>
			<button id="ratedDove"><i class="fas fa-feather" role="img" aria-label="dead dove"></i></label>
        </div>
    </fieldset>
</div>

<style>

	.filter-wrapper {
        background-color: var(--primary-clr-900);
		margin: 0 auto;
        padding: 3rem 3rem 2.5rem 3rem;
        width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	fieldset {
		margin: 0em auto;
		padding: 0em 2.25em 1.5em 2.25em;
		border-radius: 0.5em;
		border: 2px solid var(--primary-clr-800);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	
	legend {
		margin-left: 0.5em;
		font-family: var(--display-font);
        color: var(--white-clr);
		font-size: 1.5rem;
	}

	.form-flex {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1.75em;
		/* padding: 0em 1em 0.5em 1em; */
	}

	.fas {
		font-size: 1.75rem;
	}

	input[type="checkbox"],
	input[type="radio"] {
		height: 0;
		width: 0;
		margin: 0;
		padding: 0;
		position: absolute;
		opacity: 0;
	}

	button {
		color: #fff;
		opacity: 40%;
		transition: var(--link-transition);
		cursor: pointer;
	}

	button:hover,
	.active {
		opacity: 100%;
	}
	
	b {
		font-family: var(--display-font);
		font-weight: normal;
	}

	aside {
		background-color: #111;
		color: var(--white-clr);
		min-width: 100%;
	}

	aside > * {
		margin: 5em 1em;
	}

	button {
		color: var(--white-clr);
		border: none;
		background-color: var(--primary-clr-900);
		padding: 0;
        font-size: 3rem;
		transition: var(--link-transition);
		cursor: pointer;
	}

</style>

