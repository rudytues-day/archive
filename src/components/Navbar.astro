</header>

<style>
    
    header {
        min-width: 100%;
    }

    .hero {
        height: 225px;
        position: relative;
        background: var(--bg-clr);
    }

    .hero img {
        position: absolute;
        
    }

    .darby {
        height: auto;
        position: absolute;
        left: 0;
        right: 0;
        margin: auto;
        z-index: 1;
        transition: 
            ease-in-out margin 500ms,
            forwards left 500ms,
            forwards right 500ms;
    }

    #rudy-tuesday {
        color: var(--primary-clr-dark);
        font-size: 3.25em;
        font-family: var(--display);
        font-weight: 400;
        text-align: center;
        line-height: 0.85;
        text-decoration: none;
        position: absolute;
        top: 1.3em;
        right: 20%;
        opacity: 0;
        transform: translateY(-200%);
        transition: 
            transform 250ms ease-in-out,
            opacity 300ms ease-in-out;
    }

    #rudy-tuesday span {
        color: var(--link-clr);
        transition: color 0.25s ease;
    }

    #rudy-tuesday:hover span {
        color: var(--primary-clr-dark);
    }
    
    #rudy-tuesday::after {
        z-index: -1;
        content: '\f0c1';
        font-family: "Font Awesome 6 Pro";
        position: absolute;
        font-size: 2.5em;
        opacity: 30%;
        left: 10%;
        bottom: -20%;
        color: var(--link-clr);
        transition: 300ms;
    }

    #rudy-tuesday:hover::after {
        color: var(--primary-accent-clr);
        opacity: 80%;
    }

    .hover {
        transition: ease-in 0.25s;
    }

    .chains > * {
        position: absolute;
        height: 120%;
    }

    .chains > :nth-child(1) { left: 5% }
    .chains > :nth-child(2) { left: 10% }
    .chains > :nth-child(3) { left: 20% }
    .chains > :nth-child(4) { right: 15% }
    .chains > :nth-child(5) { right: 10% }
    .chains > :nth-child(6) { right: 5% }

    .desktop-chain {
        transform: translateY(-101%);
        transition: 150ms;
    }

    .chains {
        overflow: hidden;
    }

    #header:hover {
        background-image: var(--header-image)
    }

    .menu {
        background-color: var(--primary-clr-dark);
        color: var(--white-clr);
        position: relative;
        min-width: 100%;
        margin: 0;
        padding: 1em;
        font-size: 1.5rem;
        font-family: var(--display);
        text-transform: uppercase;
        text-align: center;
        list-style: none;
    }

    .toggle {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .toggle i {
        font-size: 0.8em;
    }

    .toggle:has(+ .link.active ){
        margin-bottom: 1em;
    }

    li a {
        text-decoration: none;
        color: var(--white-clr);
    }
    li a:visited {
    }

    li a:hover {
        color: var(--primary-accent-clr);
    }

    .link {
        margin: auto;
        display: none;
        position: relative;
        padding: 0.5em;
        min-width: 175px;
        z-index: 1;
    }
    
    .link.active,
    .menu .submenu-active {
        background-color: var(--primary-clr-med);
        display: block;
    }

    .submenu {
        display: none;
        background-color: var(--primary-clr-med);
        list-style: none;
        padding: 1em;
        border-radius: 8px;
        height: 0;
        transition: height 1s ease;
    }

    .submenu-active {
        display: block;
        padding-bottom: 0.25em;
        position: relative;
        height: auto;
    }

    .has-submenu a {

    }

    .has-submenu > a::after {
        content: '\f103';
        color: white;
        font-family: 'Font Awesome 6 Pro';
        display: inline-block;
        font-weight: bold;
		font-size: 1.25rem;
		margin-left: 0.5rem;   
        transition: transform 200ms ease;
    }

    .has-submenu > a:hover::after {
        color: var(--primary-accent-clr);
    }
    
    .submenu-active > a::after {
        transform: rotateX(180deg); 
    }

    .sublink {
        background: var(--primary-clr-light);
        padding: 0.5em;
    }

    .link:nth-child(2),
    .sublink:first-child {
        border-radius: 8px 8px 0px 0px;
    }

    .link:last-child,
    .sublink:last-child {
        border-radius: 0px 0px 8px 8px;
    }

    .image {
        margin: 2rem auto;
        background-color: white;
        height: 150px;
        width: 150px;
        border-radius: 100%;
    }

@media all and (min-width: 700px) {

    .darby {
        left: 25%;
        right: auto;
        margin: 0;
        transition: margin 100ms forwards;
    }
    
    #rudy-tuesday {
        transform: translateY(0%);
        opacity: 1;
        transition: 
            transform 500ms ease-in-out, 
            right 500ms ease-in-out,
            opacity 200ms ease-in-out;
    }

    .desktop-chain {
            transform: translateY(0);
            transition: 150ms;
        }

    .menu {
        display: flex;
        flex-direction: row;
        padding: 0;
        justify-content: space-evenly;
    }

    .link {
        display: block;
        background-color: var(--primary-clr-dark);
        margin: 0;
	}
    
    .link.active {
        background-color: var(--primary-clr-dark);
    }

    .has-submenu.submenu-active {
        background-color: var(--primary-clr-med);
        border-radius: 8px 8px 0px 0px;
    }

    .submenu {
        position: absolute;
        z-index: 9;
        min-width: 175px;
        top: 100%;
        left: 0;
        padding: 0;
        border-radius: 0px 0px 8px 8px;
    }

    .sublink {
        background-color: var(--primary-clr-med);
        padding: 0;
        margin: 0.5em;
    }

    .sublink:last-child {
        margin-bottom: 0.75em;
    }

    .image {
        margin: 2rem auto;
    }
    
    .toggle {
        display: none;
    }
}

@media all and (min-width: 1000px) {

    .darby {
        left: 30%;
        right: auto;
        transition: left 500ms ease;
    }

    #rudy-tuesday {
        left: auto;
        right: 30%;
        transition: right 500ms ease-in-out;
    }
}

</style>

<script>

const toggle = document.getElementById("lock");
const menuLinks = document.querySelectorAll(".link");
const hasSubmenu = document.querySelectorAll(".has-submenu");

// open mobile menu

toggle?.addEventListener("click", () => {
    menuLinks.forEach((link) =>  
    link.classList.toggle("active"));
    hasSubmenu.forEach((submenuLink) => {
        let submenu = submenuLink.querySelector(".submenu");
        submenuLink.classList.remove("submenu-active");
        submenu?.classList.remove("submenu-active");
    });
    if (toggle.classList.contains("fa-lock")) {
        toggle.classList.remove("fa-lock");
        toggle.classList.add("fa-unlock-keyhole");
    } else {
        toggle.classList.remove("fa-unlock-keyhole");
        toggle.classList.add("fa-lock");
    };
});

// open submenus

hasSubmenu.forEach((submenuLink) => {
    submenuLink.addEventListener("click", () => {
        let submenu = submenuLink.querySelector(".submenu");
        if (submenuLink.classList.contains("submenu-active")) {
            submenuLink.classList.remove("submenu-active");
            submenu?.classList.remove("submenu-active");
        } else {
            menuLinks.forEach((menuLink) => {
                let submenu = menuLink.querySelector(".submenu");
                menuLink.classList.remove("submenu-active");
                submenu?.classList.remove("submenu-active");
            });
            submenuLink.classList.add("submenu-active");
            submenu?.classList.add("submenu-active");
        }
        if (submenuLink.classList.contains("submenu-active")) {
            menuLinks.forEach((menuLink) => {
                menuLink.classList.add("active");
                toggle?.classList.remove("fa-lock");
                toggle?.classList.add("fa-unlock-keyhole");
            });
        } 
    });
});

