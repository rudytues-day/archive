<header>
    <div class="image"></div>
    <ul class="menu">
        <li class="toggle">
            <span class="title">WORKS</span>
            <i class="fas fa-lock" id="lock" aria-label="menu toggle"></i>
        </li>
        <li class="item"><a href="/">HOME</a></li>
        <li class="item"><a href="/archive">ARCHIVE</a></li>
        <li class="item"><a href="/gallery">GALLERY</a></li>
        <li class="item"><a href="/projects">PROJECTS</a></li>
    </ul>
</header>

<style>
    
    header {
        background-color: var(--primary-clr-dark);
        padding: 1em;
    }

    .menu {
        color: var(--white-clr);
        font-family: var(--display);
        text-transform: uppercase;
        font-size: 1.5rem;
        max-width: 100%;
        list-style: none;
        margin: 0em 1em;
        padding: 0;
        text-align: center;
    }

    .item {
        padding: 0.25em;
        margin: auto;
    }

    .toggle {
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    #lock {
        font-size: 0.85em;
    }

    .item {
        background-color: var(--primary-clr-med);
        display: none;
    }
    .item.active {
        display: block;
    }

    .image {
        margin: 3rem auto;
        background-color: white;
        height: 150px;
        width: 150px;
        border-radius: 100%;
    }

@media all and (min-width: 700px) {

    .menu {
        display: flex;
        flex-direction: row;
        background-color: var(--primary-clr-dark);
    }

    .item {
        display: block;
        background-color: var(--primary-clr-dark);
	}

    .image {
        margin: 2rem auto;
    }
    
    .toggle {
        display: none;
    }
}

</style>

<script>

const toggle = document.getElementById("lock");
const menu = document.querySelector("menu");
const menuItem = document.querySelectorAll(".item");

toggle?.addEventListener("click", () => {
    menuItem.forEach((item) =>
    item.classList.toggle("active"));
    if (toggle.classList.contains("fa-lock")) {
        toggle.classList.remove("fa-lock");
        toggle.classList.add("fa-unlock-keyhole");
    } else {
        toggle.classList.remove("fa-unlock-keyhole");
        toggle.classList.add("fa-lock");
    }
})

