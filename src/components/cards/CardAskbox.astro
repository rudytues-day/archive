    }

    .question-details {
        display: flex;
        justify-content: space-between;
        font-size: 1.25rem;
    }

    .question-details .fas {
        font-size: 0.8em;
        display: inline-block;
        margin-right: 0.5em;
    }

    .question {
		font-family: var(--display);
        margin: 1.25em;
        position: relative;
        max-width: fit-content;
        text-align: left;
        /* text-align: center; */
        line-height: 1.3;
        text-transform: uppercase;
        font-size: 1.125rem;
    }

