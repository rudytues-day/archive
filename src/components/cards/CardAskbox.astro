<style>

.card {
    max-width: 800px;
    border: 2px solid black;
    border-radius: 1em;
    margin: 2em;
}

    .question-header {
        margin: 0;
        font-size: 1.125rem;
		font-family: var(--display);
        background-color: var(--primary-clr-dark);
        overflow: hidden;
        padding: 0.5em 1em;
        color: var(--white-clr);
        border-radius: 0.75em 0.75em 0em 0em;
        transition: ease 0.2s;
		text-align: left;
