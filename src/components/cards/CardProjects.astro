---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { slugify, formatDateYear } from "../../utility/scripts/format-fxn.js";

interface Props {
	slug: string;
	title: string;
	href: string;
	// thumb: ImageMetadata;
	desc: string;
	createDate: Date;
	finishDate: Date;
	Nsfw?: boolean;
	Dd?: boolean;
	featured: boolean;
	collab: boolean;
	categories: Array<string>;
	icons: Array<string>
}

const { 
		slug,
		title,
		href,
		desc,
		createDate,
		finishDate,
		Nsfw,
		Dd,
		featured,
		collab,
		categories,
		icons,
		} = Astro.props as Props; 

---

	<li class="card">
        <h1>
			<span>{title}</span>
			<div class="icons">
				{ featured && <i class="fas fa-stars" role="img" aria-label="collaborative"></i> }
				<!-- {icons.map((icon) => (
					<i class={`fas ${(icon)}`}></i>
					))} -->
				{ collab && <i class="fas fa-people-pulling" role="img" aria-label="collaborative"></i> || <i class="fas fa-person-running" role="img" aria-label="independent"></i> }
			</div>
		</h1>
        <div class="body">
			<!-- <Image class="thumb"
				src={thumb}
				alt={`${title} thumbnail`}
			/> -->
			<div class="thumb"></div>
            <div class="description">
                <div class="flex">
                    <p class="date">{formatDateYear(createDate)}</p>
                    <div class="icons">
                        { Nsfw && <i class="fas fa-ban" role="img" aria-label="adult content"></i> }
                        { Dd && <i class="fas fa-feather" role="img" aria-label="dead dove"></i>}
                    </div>
                </div>
                <p class="text">{desc}</p>
				<button class="button"><a href={href}>VISIT</a></button>
				<!-- <ul class="tags">
					{categories.map((category) => (
						<li><a href={`/archive/tagged/${slugify(category)}/`}>{category}</a></li>
					))}
				</ul> -->
            </div>
        </div>
	</li>
